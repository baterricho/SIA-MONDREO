        id="college"
        name="college"
        class="w-full border-b border-gray-400 bg-transparent text-gray-700 text-sm py-1 focus:outline-none"
        required
      >
        <option value="" selected disabled>Select a college</option>
        <option value="arts">College of Arts and Humanities</option>
        <option value="science">College of Science</option>
        <option value="nursing">College of Nursing and Health Sciences</option>
        <option value="teachers">College of Teachers Education</option>
